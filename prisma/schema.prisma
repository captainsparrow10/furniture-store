// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url = env("DATABASE_URL") 
  directUrl = env("DIRECT_URL")
}

model Cart {
  id        String @id @default(cuid())
  user      User   @relation(fields: [userid], references: [id])
  userid    String 
  productid String @unique
  name      String
  image     String
  amount    Int
  price     String
}

model User {
  id        String   @id @default(cuid())
  firstname String
  lastname  String
  email     String   @unique
  password  String
  address   Address?
  cart      Cart[]
  role      UserRole @default(USER)
  session Session?
}

model Session {
  id        String   @id @default(cuid())
  user     User    @relation(fields: [userid], references: [id])
  userid   String  @unique
  token String? @db.Text
  refresh_token String? @db.Text
  expires_at Int?

}

enum UserRole {
  ADMIN
  USER
}


model Address {
  id       String  @id @default(cuid())
  user     User    @relation(fields: [userid], references: [id])
  userid   String  @unique
  company  String?
  country  String
  province String 
  street   String
  zipcode  String
  phone    String
}