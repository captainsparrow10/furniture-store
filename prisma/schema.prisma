// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url = env("POSTGRES_PRISMA_URL") // uses connection pooling
  directUrl = env("POSTGRES_URL_NON_POOLING") // uses a direct connection
}

model Cart {
  id         Int    @id @default(autoincrement())
  userId     User   @relation(fields: [id_user], references: [id])
  id_user    Int
  id_product String @unique
  name       String
  image      String
  amount     Int
  price      String
}

model User {
  id         Int          @id @default(autoincrement())
  firstName  String
  lastName   String
  email      String       @unique
  password   String
  Adress     Adress[]
  Cart Cart[]
}

model Adress {
  id          Int     @id @default(autoincrement())
  userId      User    @relation(fields: [id_user], references: [id])
  id_user     Int     @unique
  companyName String?
  country     String
  province    String
  street      String
  zipCode     String
  phone       String
}
