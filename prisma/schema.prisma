generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model CartPrueba {
  id         Int    @id @default(autoincrement())
  userId     User   @relation(fields: [id_user], references: [id])
  id_user    Int
  id_product String @unique
  name       String
  image      String
  amount     Int
  price      String
}

model User {
  id         Int          @id @default(autoincrement())
  firstName  String
  lastName   String
  email      String       @unique
  password   String
  Adress     Adress[]
  CartPrueba CartPrueba[]
}

model Adress {
  id          Int    @id @default(autoincrement())
  userId      User   @relation(fields: [id_user], references: [id])
  id_user     Int
  companyName String
  country     String
  street      String
  zipCode     Int
  phone       String
}
